<h2> Archivos </h2>
<% if @mensaje %>
<!-- Mensaje enviado de la anterior página-->
<div>
   <strong> <%= @mensaje %> </strong>
</div>
<% end %>
<!-- Enlace a la página de subir archivos -->
<p> <%= link_to "Subir archivo", :controller => "archivos", :action => "subir_archivos" %> </p>
<!-- Lista de archivos subidos -->
<table>
   <% @archivos.each do |a| %>
   <% if a == "." or a == ".." then next end; %>
   <tr>
      <td><strong> <a target="_blank" href="/archivos/<%= a %>"><%= a %></a></strong></td> 
      <td style="text-align: center" ><%= button_to 'Borrar',  {:controller => "archivos", :action => "borrar_archivos", :archivo_a_borrar => a}, {:method => "post", data: { confirm: "Esta seguro de querer borrar el archivo #{a}???"}} %></td>


   </tr>
   <% end %>
</table>
<!-- Acá se guarda el nombre del archivo antes de que el formularo sea enviado-->
<hr />
